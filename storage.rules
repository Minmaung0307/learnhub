// storage.rules
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function signedIn(){ return request.auth != null; }
    match /avatars/{uid}/{file} {
      allow read: if true;
      allow write: if signedIn() && request.auth.uid == uid;
    }
    match /signatures/{uid}/{file} {
      allow read: if true;
      allow write: if signedIn() && request.auth.uid == uid;
    }
    match /{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}